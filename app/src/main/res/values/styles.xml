<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
          <!-- All customizations that are NOT specific to a particular API-level can go here. -->
          <!-- 隐藏状态栏 -->
          <item name="android:windowFullscreen">false</item>
          <!-- 隐藏标题栏 -->
          <item name="android:windowNoTitle">true</item>
            <item name="android:windowTitleSize">@dimen/title_text_size</item>

            <item name="colorPrimary">@color/theme_color</item>
            <item name="colorPrimaryDark">#80060BF0</item>
            <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <style name="ImageTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
          <!-- All customizations that are NOT specific to a particular API-level can go here. -->
          <!-- 隐藏状态栏 -->
          <item name="android:windowFullscreen">false</item>
          <!-- 隐藏标题栏 -->
          <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">@dimen/title_text_size</item>

        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!--切换Activity动画（有问题 暂时保留）-->
    <style name="AnimationActivity">
        <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_close_exit</item>
    </style>

    <!--警告对话框-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">#807A7CF2</item>
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

</resources>
