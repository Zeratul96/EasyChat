<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_height="@dimen/toolbar_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="@dimen/title_text_padding_space"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:id="@+id/title_name" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_padding"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

       <!-- 第一模块区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:layout_marginStart="@dimen/line_margin_start"
            android:id="@+id/line1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/areas_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="地区"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:layout_weight="0.8"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:layout_marginStart="@dimen/line_margin_start"
            android:id="@+id/line2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/handwriting_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="个性签名"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:layout_weight="0.8"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line3" />
        <!--第一模块区结束-->


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_height"
            android:background="@color/background_gray"/>


        <!--第二模块区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tel_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:layout_weight="0.8"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:layout_marginStart="@dimen/line_margin_start"
            android:id="@+id/line5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="电子邮箱"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:layout_weight="0.8"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/line_margin_start"
            android:background="@color/line_gray"
            android:id="@+id/line6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="真实姓名"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:layout_weight="0.8"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line7" />
        <!--第二模块区结束-->



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_height"
            android:background="@color/background_gray"/>


        <!--第三模块区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction_layout"
            android:gravity="center_vertical"
            android:padding="@dimen/layout_padding_space" >
            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/list_margin_start"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="个人简介"
                android:textColor="@color/black_text"
                android:textSize="@dimen/list_text_size" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:id="@+id/line9" />
        <!--第三模块区结束-->

    </LinearLayout>


</LinearLayout>
