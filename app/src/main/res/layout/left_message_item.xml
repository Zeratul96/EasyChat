<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding_space">

    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/small_info_text_size"
        android:text="11:02"
        android:layout_marginBottom="15dp"
        android:id="@+id/time" />

    <LinearLayout
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/no_picture"
            android:id="@+id/sculpture" />

        <TextView
            android:paddingTop="@dimen/chat_text_view_padding"
            android:paddingBottom="@dimen/chat_text_view_padding"
            android:paddingStart="22dp"
            android:paddingEnd="18dp"
            android:gravity="center_vertical"
            android:background="@drawable/left_messages"
            android:layout_marginStart="@dimen/view_padding_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            android:id="@+id/text_content"/>

        <ImageView
            android:visibility="gone"
            android:paddingTop="@dimen/chat_text_view_padding"
            android:paddingBottom="@dimen/chat_text_view_padding"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/left_messages"
            android:layout_marginStart="@dimen/view_padding_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_content" />

        <ImageView
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/view_padding_space"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/emoji_1"
            android:id="@+id/emoji" />

    </LinearLayout>

</LinearLayout>