<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:descendantFocusability="blocksDescendants">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_padding"
        android:id="@+id/title_padding" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:text="12/12"
                android:textColor="@color/black_text"
                android:textSize="@dimen/label_text_size"
                android:textStyle="bold"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="top|end"
                android:id="@+id/date"/>

            <TextView
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/view_padding_space"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/important_info_text_size"
                android:text="2016"
                android:id="@+id/year" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/dot" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#ADD8E6"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="@dimen/layout_padding_space"
            android:paddingEnd="@dimen/layout_padding_space"
            android:paddingBottom="@dimen/layout_padding_space"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/info_text_size"
                android:paddingBottom="@dimen/view_padding_space"
                android:id="@+id/detail_time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/important_info_text_size"
                android:textColor="@color/black_text"
                android:gravity="center_horizontal|top"
                android:paddingStart="@dimen/view_padding_space"
                android:paddingEnd="@dimen/view_padding_space"
                android:paddingBottom="@dimen/view_padding_space"
                android:id="@+id/title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="@dimen/info_text_size"
                android:id="@+id/content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <com.bs.widget.MyGridView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:listSelector="#00FFFFFF"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/grid_padding"
                android:horizontalSpacing="@dimen/grid_padding"
                android:stretchMode="columnWidth"
                android:id="@+id/grid_view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>