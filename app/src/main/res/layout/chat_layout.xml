<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bs.main.chat.ChatActivity"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_height="@dimen/toolbar_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="@dimen/title_text_padding_space"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:id="@+id/title_name" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ebebeb"
        android:id="@+id/chat_recycler_view">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a7a7ab"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_comment_layout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a7a7ab"/>

        <LinearLayout
            android:background="#f5f5f6"
            android:padding="@dimen/layout_padding_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@+id/plus_btn"
                android:src="@drawable/plus"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"/>

            <View
                android:layout_width="@dimen/view_padding_space"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:background="@drawable/chat_edit_text"
                android:textSize="@dimen/text_size"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/my_cursor"
                android:id="@+id/text_edit" />

            <Button
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/info_text_size"
                android:text="发送"
                android:textColor="@drawable/blue_text_color"
                android:background="@drawable/blue_button"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0.9dp"
                android:id="@+id/send_msg" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a7a7ab"/>
    </LinearLayout>

    <GridView
        android:visibility="gone"
        android:background="#f5f5f6"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:listSelector="#00FFFFFF"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:scrollbars="none"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/function_grid_view"/>

    <GridView
        android:visibility="gone"
        android:background="#f5f5f6"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:listSelector="#00FFFFFF"
        android:numColumns="9"
        android:stretchMode="columnWidth"
        android:scrollbars="none"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/express_grid_view">
    </GridView>

</LinearLayout>
